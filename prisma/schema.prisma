generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum LanguageCode {
  AR_MSA
  ZH_HANS
}

enum SkillType {
  LISTENING
  SPEAKING
  READING
  TYPING
}

enum ItemType {
  VOCAB
  CHUNK
  PATTERN
}

enum ReviewState {
  NEW
  LEARNING
  REVIEW
  MASTERED
}

enum ReviewGrade {
  AGAIN
  HARD
  GOOD
  EASY
}

enum SchedulerVersion {
  LEGACY
  FSRS
}

enum ArabicRegister {
  MSA
  SYRIAN
}

enum ImmersionMode {
  INPUT
  OUTPUT
  STUDY
  TUTOR
}

enum SnippetKind {
  SENTENCE
  DIALOGUE
  NEWS_LINE
}

enum SnippetRegister {
  MSA
  SYRIAN
  MIXED
}

model User {
  id                    String                 @id @default(cuid())
  email                 String                 @unique
  passwordHash          String
  immersionLogs         ImmersionLog[]
  snippetInteractions   SnippetInteraction[]
  morphologyAttempts    MorphologyAttempt[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  reviewCards           ReviewCard[]
  attemptLogs           AttemptLog[]
  pronunciationAttempts PronunciationAttempt[]
  noHarakatAttempts     NoHarakatAttempt[]
  dailySessions         DailySession[]
  reminderPref          ReminderPref?
}

model PatternNote {
  id                  String       @id @default(cuid())
  language            LanguageCode
  title               String
  explanation         String
  unlockExposureCount Int          @default(12)
  lexicalItems        LexicalItem[]
  createdAt           DateTime     @default(now())
}

model LexicalItem {
  id                    String                 @id @default(cuid())
  conceptKey            String                 @unique @default(cuid())
  language              LanguageCode
  domain                String
  itemType              ItemType
  scriptText            String
  vowelledText          String?
  transliteration       String?
  gloss                 String
  audioUrl              String?
  imageUrl              String?
  difficulty            Int                    @default(1)
  patternNoteId         String?
  patternNote           PatternNote?           @relation(fields: [patternNoteId], references: [id], onDelete: SetNull)
  lessonItems           LessonItem[]
  lexicalVariants       LexicalVariant[]
  reviewCards           ReviewCard[]
  attemptLogs           AttemptLog[]
  pronunciationAttempts PronunciationAttempt[]
  noHarakatAttempts     NoHarakatAttempt[]
  snippetLinks          SnippetLexicalLink[]
  morphologyEntries     MorphologyEntry[]
  morphologyAttempts    MorphologyAttempt[]
  generatedVariants     GeneratedVariant[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt

  @@index([language, domain])
}

model LexicalVariant {
  id             String        @id @default(cuid())
  lexicalItemId  String
  register       ArabicRegister
  scriptText     String
  transliteration String?
  isPrimary      Boolean       @default(false)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  lexicalItem    LexicalItem   @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@unique([lexicalItemId, register])
  @@index([register, scriptText])
}

model Lesson {
  id               String       @id @default(cuid())
  language         LanguageCode
  domain           String
  sequenceNo       Int
  estimatedMinutes Int
  lessonItems      LessonItem[]
  createdAt        DateTime     @default(now())

  @@unique([language, domain, sequenceNo])
  @@index([language, sequenceNo])
}

model LessonItem {
  lessonId      String
  lexicalItemId String
  position      Int
  lesson        Lesson      @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lexicalItem   LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@id([lessonId, lexicalItemId])
  @@unique([lessonId, position])
}

model ReviewCard {
  id                  String      @id @default(cuid())
  userId              String
  lexicalItemId       String
  schedulerVersion    SchedulerVersion @default(LEGACY)
  ease                Float       @default(2.5)
  intervalDays        Int         @default(0)
  dueAt               DateTime
  fsrsStability       Float?
  fsrsDifficulty      Float?
  fsrsLastReview      DateTime?
  fsrsReps            Int         @default(0)
  fsrsLapses          Int         @default(0)
  lastScore           Int?
  state               ReviewState @default(NEW)
  successCount        Int         @default(0)
  firstSeenAt         DateTime    @default(now())
  lastReviewedAt      DateTime?
  transliterationStage Int        @default(1)
  user                User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  lexicalItem         LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@unique([userId, lexicalItemId])
  @@index([userId, dueAt])
}

model AttemptLog {
  id             String      @id @default(cuid())
  userId         String
  lexicalItemId  String
  skillType      SkillType
  score          Int
  latencyMs      Int?
  idempotencyKey String
  createdAt      DateTime    @default(now())
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  lexicalItem    LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@unique([userId, idempotencyKey])
  @@index([userId, createdAt])
}

model PronunciationAttempt {
  id            String      @id @default(cuid())
  userId        String
  lexicalItemId String
  transcript    String
  score         Int
  audioPath     String?
  createdAt     DateTime    @default(now())
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  lexicalItem   LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model NoHarakatAttempt {
  id                      String        @id @default(cuid())
  userId                  String
  lexicalItemId           String
  predictedTransliteration String
  expectedTransliteration String
  displayText             String
  vowelledText            String
  transcript              String
  score                   Int
  confidence              String
  feedback                String
  components              Json?
  tipCodes                Json
  form                    ArabicRegister @default(MSA)
  createdAt               DateTime      @default(now())
  user                    User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  lexicalItem             LexicalItem   @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, lexicalItemId, createdAt])
}

model DailySession {
  id             String       @id @default(cuid())
  userId         String
  date           DateTime
  language       LanguageCode
  plannedMinutes Int
  completedMinutes Int        @default(0)
  streakCount    Int          @default(0)
  startedAt      DateTime     @default(now())
  endedAt        DateTime?
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId, date])
}

model ReminderPref {
  id        String   @id @default(cuid())
  userId    String   @unique
  enabled   Boolean  @default(false)
  localTime String   @default("20:00")
  timezone  String   @default("UTC")
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GeneratedVariant {
  id            String       @id @default(cuid())
  lexicalItemId String
  language      LanguageCode
  promptText    String
  expectedGloss String
  createdAt     DateTime     @default(now())
  lexicalItem   LexicalItem  @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@index([lexicalItemId, createdAt])
}

model ImmersionLog {
  id         String        @id @default(cuid())
  userId     String
  language   LanguageCode
  mode       ImmersionMode
  minutes    Int
  source     String?
  notes      String?
  occurredAt DateTime      @default(now())
  createdAt  DateTime      @default(now())
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, language, occurredAt])
  @@index([userId, createdAt])
}

model Snippet {
  id           String              @id @default(cuid())
  language     LanguageCode
  kind         SnippetKind
  register     SnippetRegister
  domain       String
  phaseMin     Int                 @default(1)
  phaseMax     Int                 @default(4)
  difficulty   Int                 @default(1)
  scriptText   String
  vowelledText String?
  transliteration String?
  gloss        String
  audioUrl     String?
  sourceLabel  String
  isActive     Boolean             @default(true)
  links        SnippetLexicalLink[]
  interactions SnippetInteraction[]
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  @@index([language, domain, phaseMin, phaseMax])
  @@index([language, isActive, createdAt])
}

model SnippetLexicalLink {
  snippetId     String
  lexicalItemId String
  tokenText     String?
  position      Int?
  snippet       Snippet     @relation(fields: [snippetId], references: [id], onDelete: Cascade)
  lexicalItem   LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@id([snippetId, lexicalItemId])
  @@index([lexicalItemId])
}

model SnippetInteraction {
  id              String   @id @default(cuid())
  userId          String
  snippetId       String
  comprehension   Int?
  minedCount      Int      @default(0)
  consumedMinutes Int      @default(0)
  createdAt       DateTime @default(now())
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  snippet         Snippet  @relation(fields: [snippetId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, snippetId, createdAt])
}

model MorphologyEntry {
  id            String        @id @default(cuid())
  lexicalItemId String
  root          String
  wazn          String
  pos           String?
  lemma         String?
  register      ArabicRegister @default(MSA)
  confidence    Int           @default(60)
  lexicalItem   LexicalItem   @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([lexicalItemId, register])
  @@index([root, wazn])
}

model MorphologyAttempt {
  id             String      @id @default(cuid())
  userId         String
  lexicalItemId  String
  promptType     String
  userAnswer     String
  expectedAnswer String
  isCorrect      Boolean
  score          Int
  root           String?
  wazn           String?
  createdAt      DateTime    @default(now())
  user           User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  lexicalItem    LexicalItem @relation(fields: [lexicalItemId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([userId, lexicalItemId, createdAt])
}
